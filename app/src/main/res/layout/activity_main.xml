<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diu.simplecompletecalculator.MainActivity">
 <LinearLayout
     android:id="@+id/layout1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:weightSum="1">
     <TextView
         android:id="@+id/text"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:hint="0"
         android:padding="15dp"
         android:textSize="50sp"
         android:layout_weight="0.33"
         android:gravity="bottom|right"
         android:background="@android:drawable/bottom_bar" />

 </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt2"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="C"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt21"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="±"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt3"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="%"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt4"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="÷"
                android:textSize="20sp"
                tools:background="@android:color/holo_orange_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt5"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="7"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt6"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="8"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt7"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="9"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt8"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="×"
                android:textSize="20sp"
                tools:background="@android:color/holo_orange_dark" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt9"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="4"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt10"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="5"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt11"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="6"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt12"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="-"
                android:textSize="20sp"
                tools:background="@android:color/holo_orange_dark" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt13"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="1"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt14"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="2"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt15"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt16"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="+"
                android:textSize="20sp"
                tools:background="@android:color/holo_orange_dark" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt17"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt20"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="back"
                android:textAllCaps="false"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt18"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="."
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt19"
                android:layout_width="90sp"
                android:layout_height="50dp"
                android:text="="
                android:textSize="20sp"
                tools:background="@android:color/holo_orange_dark" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
